# Coding Society Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/coding-society
MONGODB_TEST_URI=mongodb://localhost:27017/coding-society-test

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret
JWT_REFRESH_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Game Configuration
DEFAULT_XP_REWARD=10
LEVEL_UP_XP_BASE=100
SKILL_POINT_REWARD=1
ACHIEVEMENT_XP_BONUS=50

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis Configuration (Optional - for sessions)
REDIS_URL=redis://localhost:6379
SESSION_SECRET=your-super-secure-session-secret

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log