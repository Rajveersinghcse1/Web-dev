# Environment Configuration for Coding Society Platform
# Copy this file to .env in the backend folder and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/coding-society
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/coding-society

# Server Configuration
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000

# MinIO Configuration (Object Storage)
MINIO_ENDPOINT=127.0.0.1
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=24h

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Code Execution Service (if implementing actual code execution)
ENABLE_CODE_EXECUTION=false
CODE_EXECUTION_TIMEOUT=5000

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Email Service (for future features)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis Configuration (for session storage, optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info