# Frontend Environment Configuration for Coding Society
# Copy this file to .env in the root directory and update the values

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# Application Configuration
VITE_APP_NAME=Coding Society
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_CODE_EXECUTION=false
VITE_ENABLE_BATTLE_ARENA=true
VITE_ENABLE_ACHIEVEMENT_SOUNDS=true
VITE_ENABLE_ANIMATIONS=true

# Analytics (when implemented)
VITE_ANALYTICS_ID=
VITE_ENABLE_ANALYTICS=false

# Third-party Services
VITE_GOOGLE_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=

# Development
VITE_DEV_MODE=true
VITE_DEBUG_SOCKET=false
VITE_SHOW_DEV_TOOLS=true